{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "out",
        "lib": [
            "ES2021"
        ],
        "sourceMap": true,
        "moduleResolution": "node",
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "skipLibCheck": true,
        "noUnusedLocals": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "src",
        "tasks",
        // "test", // Uses its own tsconfig.json until all nullability issues are fixed.
        "typings"
    ]
}
